<header class='header'>
<div class="">
  {{> logo}}
</div>

  <nav class='header_nav'>
    <div class="header_nav_right">
    {{>nav list=header}}
    </div>
  </nav>
</header>

<main class="main">
  {{#with info}}
  <div class="info">
  <h1 class="info_title">{{title}}</h1>
  <p class="info_text">{{description}}</p>
  </div>
  {{/with}}

  {{#with form}}
  <form class="form">
    <div class="form_input_list">
      {{#each inputs}}
      <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input={{id}}"/>
      {{/each}}
    </div>

    {{#with checkbox}}
    <div class="form_checkbox">
      <input type="checkbox" name={{name}} id="{{name}}">
      <div></div>
      <label for="{{name}}">{{label}}</label>
    </div>
    {{/with}}

    <button type="submit" class="form_button">{{button}}</button>
    <p class="form_info">{{info}}</p>
  </form>
  {{/with}}
</main>

<div class="updates">
{{#with updates}}
<h2 class="updates_title">{{title}}</h2>
  {{#each list}}
  <div class="nickname">
    <img class="img"></img>
    <strong class="updates_name">{{nickname}}</strong>
    <p class="updates_text">{{description}}</p>
  </div>
  {{/each}}
  {{#with show_all}}
  <a href={{url}} class="messages_link">{{text}}</a>
  {{/with}}
{{/with}}
</div>

<div class="block">
{{#with expirience}}
  <span class="visually-hidden">{{badge}}</span>
  <div class="expirience_title">{{title}}</div> 
  <div class="expirience">
   {{#each list}}
    <div class="list">
    <strong class="expirience_name">{{name}}</strong>
    <p class="expirience_text">{{details}}</p>
    </div>
   {{/each}} 
  </div> 
{{/with}}
</div>

<footer class="row footer">
    <div class="col-3">
    {{> logo}}
    <span class="footer_copyright">Copyright 2023</span> 
    </div>
    {{#each footer}}
    <div class="col-3">
        <span class="footer_title">{{title}}</span> 
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>