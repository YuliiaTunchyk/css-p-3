<header class='header'>
<div class="">
  {{> logo}}
</div>

  <nav class='header_nav'>
    <div class="header_nav_right">
    {{>nav list=header}}
    </div>
  </nav>
</header>

<div class="main">
  {{#with main}}
  <img src="{{image}}" alt="Main img" class="main_image">
  <div class="main_content">
    <h1 class="main_heading">{{heading}}</h1>
    <p class="main_description">{{description}}</p>
    <a href="{{href}}" class="main_button">{{button}}</a>
  </div>
  {{/with}}
</div>

<main class="featured">
  {{#each featured}}
  <div class="card">
    <div class="card_image" style="background-image: url({{photo}})"></div>
    <h2 class="card_heading">{{heading}}</h2>
    <p class="card_info">{{info}}</p>
    <a href="{{linkUrl}}" class="card_button">{{linkText}}</a>
  </div>
  {{/each}}
</main>

<div class="actions">
  {{#each actions}}
  <div class="actions_content">
    <h3 class="actions_title">{{heading}}</h3>
    <a href="{{url}}" class="form_button">{{text}}</a>
  </div>
{{/each}}
</div>

<footer class="row footer">
    <div class="col-3">
    {{> logo}}
    <span class="footer_copyright">Copyright 2023</span> 
    </div>
    {{#each footer}}
    <div class="col-3">
        <span class="footer_title">{{title}}</span> 
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>


